<h3><%= @error_message %></h3>    
<h2>新規投稿</h2>
<div class="shadow p-3 mb-5 bg-white rounded">
<%= form_tag("/menue/create") do %>
<div>
  <div class="form-group row">
    <label for="inputTitle" class="login-label">タイトル</label>
    <div class="col-sm-10">
      <input type="text" name="title" class="form-control" id="inputName" placeholder="タイトル" >
    </div>
  </div>
  <div class="form-group row">
    <label for="inputMenueEvent" class="login-label">対象種目</label>
    <div class="col-sm-10">
      <input type="text" name="menue_event" class="form-control" id="inputPassword" placeholder="対象種目">
    </div>
  </div>
  <div class="form-group row">
    <label for="inputMenueLevel" class="login-label">対象レベル</label>
    <div class="col-sm-10">
      <input type="text" name="menue_level" class="form-control" id="inputPassword" placeholder="対象レベル">
    </div>
  </div>
  <div class="form-group row">
    <label for="inputFrequency" class="login-label">頻度</label>
    <div class="col-sm-10">
      <input type="text" name="frequency" class="form-control" id="inputPassword" placeholder="頻度">
    </div>
  </div>
  <div class="form-group row">
    <label for="inputStress" class="login-label">負荷</label>
    <div class="col-sm-10">
      <input type="text" name="stress" class="form-control" id="inputBelong" placeholder="負荷">
    </div>
  </div>
  <div class="form-group row">
    <label for="inputComment" class="login-label">説明</label>
    <div class="col-sm-10">
      <textarea type="text" name="comment" class="form-control" id="inputEvent" placeholder="説明"></textarea>
    </div>
  </div>
  
<div class="button-area login">
<input type="submit" class="btn btn-success btn-sm" value="投稿">
</div>
<% end %>
</div>
</div>
<%= form_tag("/menue/back") do %>
<div class="button-area new">
<input type="submit" class="btn btn-success btn-sm" value="戻る">
</div>
<% end %>