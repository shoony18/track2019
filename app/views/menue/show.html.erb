<h3><%= @error_message %></h3>    
<h2>新規投稿</h2>
<div class="shadow p-3 mb-5 bg-white rounded">
<%= form_tag("/menue/create") do %>
<div>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= @menue.title %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= @menue.menue_event %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= @menue.menue_level %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= @menue.frequency %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= @menue.stress %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= @menue.comment %>
    </div>
  </div>
  
</div>
</div>
<div class="button-area login">
<%= link_to("編集", "/menue/edit/#{@current_user.id}") %>
</div>
<% end %>
<%= form_tag("/menue/back") do %>
<div class="button-area new">
<input type="submit" class="btn btn-success btn-sm" value="戻る">
</div>
<% end %>