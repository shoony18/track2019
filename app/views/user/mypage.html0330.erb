<h4><%= @error_message %></h4>    
<h1 class="mypage">マイページ</h1>
<h5>ユーザー情報</h5>
<div class="shadow p-3 mb-5 bg-white rounded">
　<div>
  <div class="form-group row">
    <label for="inputName" class="login-label">氏名</label>
    <div class="col-sm-10">
      <%= @user.real_name %>
    </div>
  </div>
  <div class="form-group row">
    <label for="inputUserName" class="login-label">ユーザー名</label>
    <div class="col-sm-10">
      <%= @user.user_name %>
    </div>
  </div>
  <div class="form-group row">
    <label for="inputBelong" class="login-label">所属</label>
    <div class="col-sm-10">
      <%= @user.belong %>
    </div>
  </div>
  <div class="form-group row">
    <label for="inputEvent" class="login-label">専門</label>
    <div class="col-sm-10">
     <%= @user.event %>
    </div>
  </div>
　<div class="button-area add-on">
    <input type="submit" class="btn btn-warning btn-sm" value="ユーザー情報を追加">
　</div>
　</div>
</div>

<div class="button-area new">
  <a href="/logout" class="btn btn-secondary btn-sm">ログアウト</a>
</div>

<div><h5>公開された練習メニュー</h5></div>
<% @user.menues.each do |menue| %>
 <% if @user.menues.present? %>
 <div class="menue-area">
  <div class="menue-body">
    <h4 class="menue-title"><%= menue.title %></h4>
    <p class="menue-comment"><%= menue.comment %></p>
    <p class="menue-text">
        <small class="text-muted"><%= menue.menue_event %></small>
        <small class="text-muted"><%= menue.menue_level %></small>
    </p>
    <p>
        <small class="text-muted">投稿日時：<%= menue.updated_at %></small>
    </p>
    <div class="btn btn-warning">
        <%= link_to("詳細", "/menue/show/#{session[:menue_id]}") %>
    </div>
  </div>
  <img class="menue-img-bottom" src="..." alt="Card image cap">
 </div>
 <% else %>
    <p>まだ投稿はありません</p>
 <% end %>
<% end %>
<div class="button-area">
    <a href="/menue/new" class="btn btn-warning btn-sm">新規投稿</a>
</div>
<div><h5>公開された記事</h5></div>
<div class="button-area">
    <a href="/draft/new" class="btn btn-warning btn-sm">新規投稿</a>
</div>